# ------------------------------------------------------------------------------
# 4. Laravel Storage & Cache (Giữ cấu trúc folder, bỏ file rác)
# ------------------------------------------------------------------------------
# OAuth Keys (Passport/Sanctum)
/storage/*.key

# Laravel Pail (Logging mới)
/storage/pail

# Logs
*.log
/storage/logs/*.log
!/storage/logs/.gitignore

# Framework Cache/Sessions/Views (Rất quan trọng để không push file rác)
/storage/framework/cache/*
!/storage/framework/cache/.gitignore

/storage/framework/sessions/*
!/storage/framework/sessions/.gitignore

/storage/framework/testing/*
!/storage/framework/testing/.gitignore

/storage/framework/views/*
!/storage/framework/views/.gitignore

# User Uploaded Files (Nếu bạn lưu ảnh upload trong này thì không nên commit)
/storage/app/public/*
!/storage/app/public/.gitignore

