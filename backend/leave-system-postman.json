                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "// Đọc response từ server",
                                    "var jsonData = pm.response.json();",
                                    "",
                                    "// Nếu login thành công và có token",
                                    "if (jsonData.success && jsonData.data.access_token) {",
                                    "    // Lưu token vào biến collection",
                                    "    pm.collectionVariables.set(\"token\", jsonData.data.access_token);",
                                    "    ",
                                    "    // Log ra console để biết script đã chạy",
                                    "    console.log(\"Token updated for Admin\");",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"admin@example.com\",\n    \"password\": \"password123\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/login",
